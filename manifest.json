{
	"manifest_version": 2,
	"name": "Art Saver",
	"version": "1.7.17",
	"description": "Easily download and track downloads in supported art gallery websites.",
	"browser_specific_settings": {
		"gecko": {
			"strict_min_version": "79.0"
		}
	},
	"options_ui": {
		"open_in_tab": true,
		"page": "options/options.html"
	},
	"background": {
		"scripts": [
			"background/storagekeys.js",
			"background/settings.js",
			"background/background.js"
		]
	},
	"icons": {
		"16": "icons/icon_16.svg",
		"48": "icons/icon.svg"
	},
	"permissions": [
		"downloads",
		"storage",
		"*://*.pximg.net/*",
		"*://sta.sh/*",
		"*://api-da.wixmp.com/*",
		"*://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/*",
		"*://wixmp-ed30a86b8c4ca887773594c2.wixmp.com/",
		"*://*.deviantart.net/*",
		"*://*.deviantart.com/*",
		"*://d.facdn.net/*",
		"*://*.furaffinity.net/*",
		"*://*.ib.metapix.net/*",
		"*://*.twitter.com/*",
		"*://*.twimg.com/",
		"*://*.x.com/"
	],
	"page_action": {
		"browser_style": false,
		"default_icon": "icons/icon_16.svg",
		"default_title": "Art Saver",
		"default_popup": "popup/popup.html",
		"show_matches": [
			"*://*.furaffinity.net/*",
			"*://*.deviantart.com/*",
			"*://*.pixiv.net/*",
			"*://*.inkbunny.net/*",
			"*://*.twitter.com/*",
			"*://*.x.com/*"
		]
	},
	"web_accessible_resources": [
		"workers/fileworker.js",
		"workers/stashworker.js",
		"workers/downloadworker.js",
		"content_ui/tooltip.html",
		"content_ui/infobar.html"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.furaffinity.net/*"
			],
			"js": [
				"content_scripts/sites/furaffinity.js"
			]
		},
		{
			"matches": [
				"*://*.deviantart.com/*"
			],
			"js": [
				"lib/purify.min.js",
				"content_scripts/sites/deviantart.js"
			]
		},
		{
			"matches": [
				"*://*.pixiv.net/*"
			],
			"js": [
				"content_scripts/sites/pixiv.js"
			]
		},
		{
			"matches": [
				"*://*.inkbunny.net/*"
			],
			"js": [
				"content_scripts/sites/inkbunny.js"
			]
		},
		{
			"matches": [
				"*://*.twitter.com/*",
				"*://*.x.com/*"
			],
			"js": [
				"content_scripts/sites/twitter.js"
			]
		},
		{
			"matches": [
				"*://*.furaffinity.net/*",
				"*://*.deviantart.com/*",
				"*://*.inkbunny.net/*",
				"*://*.pixiv.net/*",
				"*://*.twitter.com/*",
				"*://*.x.com/*"
			],
			"js": [
				"background/storagekeys.js",
				"general_scripts/selectors.js",
				"content_scripts/classes.js",
				"content_scripts/main.js"
			],
			"css": [
				"css/style.css"
			]
		}
	]
}